# -----------------------------------------------------------------------------
# Web Information
# -----------------------------------------------------------------------------
NEXT_PUBLIC_WEB_URL = "https://www.yourdomain.com"
NEXT_PUBLIC_PROJECT_NAME = "ImageToPrompt"

# -----------------------------------------------------------------------------
# Database with Supabase
# -----------------------------------------------------------------------------
# https://supabase.com/docs/guides/getting-started/quickstarts/nextjs
# Set your Supabase URL and Anon Key
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Initial credits for new users (default: 100)
INITIAL_USER_CREDITS=100

# -----------------------------------------------------------------------------
# Auth with next-auth
# https://authjs.dev/getting-started/installation?framework=Next.js
# Set your Auth URL and Secret
# Secret can be generated with `openssl rand -base64 32`
# -----------------------------------------------------------------------------
AUTH_SECRET = ""

# Google Auth
# https://authjs.dev/getting-started/providers/google
# 1. Go to: https://console.cloud.google.com/apis/credentials
# 2. Create OAuth 2.0 Client ID (Web application)
# 3. Add authorized redirect URIs:
#    - http://localhost:3006/api/auth/callback/google (for development)
#    - https://yourdomain.com/api/auth/callback/google (for production)
# 4. Copy Client ID and Client Secret below
# 5. Enable Google+ API in Google Cloud Console

# Server-side credentials (for standard OAuth flow)
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# Client-side credentials (for One Tap login, can use same Client ID)
NEXT_PUBLIC_AUTH_GOOGLE_ID=""

# Enable/disable Google authentication methods
NEXT_PUBLIC_AUTH_GOOGLE_ENABLED="true"           # Standard OAuth button
NEXT_PUBLIC_AUTH_GOOGLE_ONE_TAP_ENABLED="false"  # One Tap popup login

# Github Auth
# https://authjs.dev/getting-started/providers/github
AUTH_GITHUB_ID = ""
AUTH_GITHUB_SECRET = ""
NEXT_PUBLIC_AUTH_GITHUB_ENABLED = "false"

